@page "/"
@using Pyrox.BlazorComponents.DataGrid.E2ETests.Data

<h1>Weather Forecast</h1>

<DataGrid TItem="WeatherForecast"
          TKey="WeatherForecastSortKey"
          DefaultSort="SortInformation<WeatherForecastSortKey>.SortAscending(WeatherForecastSortKey.Date)">
    <GridHeader>
        <th>Date</th>
        <th>Temperature (C)</th>
        <th>Temperature (F)</th>
        <th>Summary</th>
    </GridHeader>
    <GridRow>
        <td>@context.Date</td>
        <td>@context.TemperatureC</td>
        <td>@context.TemperatureF</td>
        <td>@context.Summary</td>
    </GridRow>
</DataGrid>
